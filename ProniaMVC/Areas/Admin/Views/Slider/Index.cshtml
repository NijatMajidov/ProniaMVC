@using ProniaMVC.Core.Models
@model List<Slider>

@{
    int count = 0;
}
<h1>
    Sliders

    <a class="btn btn-primary" asp-action="Create"> Create</a>
</h1>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">SubTitle</th>
                <th scope="col">Description</th>
                <th scope="col">ImageUrl</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Title</td>
                    <td>@item.SubTitle</td>
                    <td>@item.Description</td>
                    <td><img src="~/assets/images/website-images/@item.ImageUrl" /></td>
                    <td>
                        <a class="btn btn-primary" asp-action="Update" asp-controller="Slider" asp-route-id="Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Slider" asp-route-id="Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>